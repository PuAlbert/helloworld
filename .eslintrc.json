{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  },
  "ignorePatterns": ["npkg/*", "useghpkg/*", "usepkg/*"]
}
